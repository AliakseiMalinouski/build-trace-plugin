{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "paths": {
      "&settings/*": ["./src/settings/*"],
      "&declarations/*": ["./src/declarations/*"]
    }
  },
  "include": ["src"]
}
